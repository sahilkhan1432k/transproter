<%= render 'layouts/navbar' %></br></br>
<p class="text-center display-6">Forgot your password?</p>
<div class = "row">
  <div class="col-2">
  </div>
  <div class="col-8">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

    <div class="row justify-content-md-center">
      <div class="field form-outline col-4 col-md-6"
              id="pills-login"
              role="tabpanel"
              aria-labelledby="tab-login">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-label form-control', placeholder: 'Email'%>
      </div>
    </div>

    <div class="row justify-content-md-center">
      <div class="actions col-4 col-md-6">
        <%= f.submit "Send me reset password instructions", class:'btn btn-outline-success' %> </br>
        <%= render "devise/shared/links" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
 <div class="container">
    <div class="row clearfix">
        <div class="col-lg-12">
            <div class="card chat-app">
                <div id="plist" class="people-list">
                   
                    <ul class="list-unstyled chat-list mt-2 mb-0">
                        <% if @rooms.present? %>
                            <nav class="nav flex-column">
                               
                            </nav>
                        <% else %>
                            <div class="text-muted">
                                The are no rooms
                            </div>
                        <% end %>
                    </ul>
                </div>
                <div class="chat">
                    <div class="chat-header clearfix">
                        <div class="row">
                            <div class="col-lg-6">
                                <a href="javascript:void(0);" data-toggle="modal" data-target="#view_info">
                                    <img src="https://bootdey.com/img/Content/avatar/avatar2.png" alt="avatar">
                                </a>
                                <div class="chat-about">
                                   
                                </div>
                            </div>
                            
                        </div>
                    </div>
                    <div class="chat-history">
                        <ul class="m-b-0">
                            <div id='messages' data-room_id="<%= @room.id %>">
                                <% @reciver_messages.each do |message| %>
                                    <li class="clearfix">
                                        <div class="message other-message float-right"><%= message.content%></div>
                                    </li>
                                <% end %>
                                <% @sender_messages.each do |message| %>
                                    <li class="clearfix">
                                        
                                        <div class="message my-message"><%= message.content%></div>    
                                                                        
                                    </li> 
                                <% end %>
                            </div>
                        </ul>
                    </div>
                    <div class="chat-message clearfix">
                        <div class="input-group mb-0">
                            <%= text_field_tag :content, nil, data: { behavior: 'room_speaker' }, class:'form-control', placeholder:'Type your text here....' %>                                   
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-sm p-md-5 ">
  <div class="card mb-3 ">
    <div class="row">
      <div class="col-md-8">
        <div class="card-body">
          <table class="table ">
            <tbody>
              <tr>
                <th scope="row">Name</th>
                <td><%= @material.name %></td>
              </tr>
              <tr>
                <th scope="row">Cost</th>
                <td><%= @material.cost %></td>
              </tr>
            </tbody>
          </table><br>
          <%= link_to 'Back', @plant, class: 'fas btn btn-outline-dark ' %>
          <%= link_to 'Edit', edit_plant_material_path, class: 'fas btn btn-outline-info ' %>
        </div>
      </div>
      <div class="col p-md-0">
        <% if @material.avatar.attached? %>
          <%= image_tag @material.avatar, class:'card-img-top'%>
        <% end %>
      </div>
    </div>
  </div>
</div>

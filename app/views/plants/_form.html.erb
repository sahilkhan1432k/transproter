<div class = "row">
  <div class="col-2">
  </div>
  <div class="col-8">
    <div class= "container vehicle">
      <div class="text-center mt-4"></br></br>
        <%= form_with(model: plant) do |form| %>
          <% if plant.errors.any? %>
            <div class="row justify-content-md-center">
              <div id="error_explanation">
                <h2><%= pluralize(plant.errors.count, "error") %> prohibited this plant from being saved:</h2>

                <ul>
                  <% plant.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          <% end %>
          <div class="row justify-content-md-center">
            <div class="col-8">
              <%= form.text_field :name, class:'form-label form-control', placeholder: 'Name' %>
              <%= form.text_area :address, class:'form-label form-control', placeholder: 'Addresst' %>
              <%= form.file_field :avatar,class:'form-label form-control' %>
              <div class="actions text-start">
                <%= link_to 'Back', @plant %>
                <%= form.submit class: 'btn  btn btn-outline-primary text-end' %>
              </div>
             </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
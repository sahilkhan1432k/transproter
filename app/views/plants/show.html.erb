<div class="container-sm p-md-5 ">
  <div class="card mb-3 ">
    <div class="row">
        <div class="col-6">
          <div class="card-body">
            <table class="table">
              <tbody>
                <tr>
                  <th scope="row">Name:</th>
                  <td><%= @plant.name %></td>
                </tr>
                <tr>
                  <th scope="row">Address</th>
                  <td><%= @plant.address %></td>
                </tr>
              </tbody>
            </table>
            <%= link_to 'Back', plants_path, class: 'btn  btn btn-outline-dark ' %>
            <%= link_to 'Edit', edit_plant_path(@plant), class: 'fas btn btn-outline-info ' %>
            <%= link_to 'Delete', @plant, method: :delete, data: { confirm: 'Are you sure?' }, class: 'fas btn btn-outline-danger ' %>
          </div>
        </div>
        <div class="col">
          <% if @plant.avatar.attached? %>
          <%= image_tag @plant.avatar, class:'card-img-top image_style'%>
          <% end %>
        </div>
    </div>
  </div>
</div>
<div class = "container p-5">
  <h1 class= "text-center p-md-4">Materials</h1>
    <p class="text-end">    <%= link_to 'New Material', new_plant_material_path(plant_id: @plant.id), class: 'btn btn-secondary te'  %>
    </p>
    <div class = "row row-cols-1 row-cols-md-3 g-4">
      <% @plant.materials.each do |material| %>
      <div class="col">
        <div class="card h-100">
          <div >
            <% if material.avatar.attached? %>
              <%= image_tag material.avatar, class:'card-img-top image_style'%>
            <% else %>
            <% end %>
          </div>
          <div class="card-body ">
            <h5 class="card-title"><%= link_to material.name, plant_material_path(plant_id: material.plant.id, id: material.id)  %></h5>
            <h5><%= material.cost %></h5>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  <br>
</div>

